procedure  TfmClientes.AddCliente(id_cliente: integer;
                                   direccion, telefono, nombre: string);
var
   item: TListBoxItem;
   frame: TClientCard;
begin
    item := TListBoxItem.Create(lbClientBar);
    item.Selectable := false;
    item.Text := '';
    item.height := 231;
    item.Tag := id_cliente;
end;

